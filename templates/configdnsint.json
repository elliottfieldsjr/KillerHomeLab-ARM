{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ExtensionsAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "Virtual Network API Version"
            }
        },
        "ExtensionsTypeHandlerVersion": {
            "type": "string",
            "metadata": {
                "description": "Extension Type Handler Version"
            }
        },
        "computerName": {
            "type": "string",
            "metadata": {
                "description": "Computer Name"
            }
        },
        "NetBiosDomain": {
            "type": "string",
            "metadata": {
                "description": "NetBios Domain Name"
            }
        },
        "InternaldomainName": {
            "type": "string",
            "metadata": {
                "description": "The FQDN of the AD Domain created "
            }
        },
        "ReverseLookup1": {
            "type": "string",
            "metadata": {
                "description": "The name of Reverse Lookup Zone 1 Network ID"
            }
        },
        "ForwardLookup1": {
            "type": "string",
            "metadata": {
                "description": "The name of Forward Lookup Zone 1 Network ID"
            }
        },
        "dc1lastoctet": {
            "type": "string",
            "metadata": {
                "description": "DC1 Last IP Octet"
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "The name of the Administrator of the new VM and Domain"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password for the Administrator account of the new VM and Domain"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The location of resources, such as templates and DSC modules, that the template depends on"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "Auto-generated token to access _artifactsLocation"
            }
        }
    },
    "variables": {
        "ModulesURL": "[uri(parameters('_artifactsLocation'), concat('DSC/CONFIGDNSINT.zip', parameters('_artifactsLocationSasToken')))]",
        "ConfigurationFunction": "CONFIGDNSINT.ps1\\CONFIGDNSINT"
    },
    "resources": [
        {
            "name": "[concat(parameters('computerName'),'/Microsoft.Powershell.DSC')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "[parameters('ExtensionsAPIVersion')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "[parameters('ExtensionsTypeHandlerVersion')]",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "WMFVersion": "latest",
                    "ModulesUrl": "[variables('modulesUrl')]",
                    "ConfigurationFunction": "[variables('configurationFunction')]",
                    "Properties": {
                        "computerName": "[parameters('computerName')]",
                        "NetBiosDomain": "[parameters('NetBiosDomain')]",
                        "InternaldomainName": "[parameters('InternaldomainName')]",
                        "ReverseLookup1": "[parameters('ReverseLookup1')]",
                        "ForwardLookup1": "[parameters('ForwardLookup1')]",
                        "dc1lastoctet": "[parameters('dc1lastoctet')]",
                        "AdminCreds": {
                            "UserName": "[parameters('adminUsername')]",
                            "Password": "PrivateSettingsRef:AdminPassword1"
                        }
                    }
                },
                "protectedSettings": {
                    "Items": {
                        "AdminPassword1": "[parameters('adminPassword')]"
                    }
                }
            }
        }
    ]
}