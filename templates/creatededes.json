{
    "$schema":"https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion":"1.0.0.0",
    "parameters":{  
        "DiskEncryptionSetAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "Disk Encryption Set API Version"
            }
        }, 
        "KeyVaultKeyUrl": {
            "type": "string"
        },               
        "DEDESName": {
            "type": "string"
        },
        "KeyVaultName": {
            "type": "string",
            "metadata": {
                "description": "Key Vault Name"
            }
        }        
    },
    "variables": {
        "KeyVaultId": "[resourceId(resourceGroup().name, 'Microsoft.KeyVault/vaults', parameters('KeyVaultName'))]"
    },    
    "resources":[  
       {  
        "type":"Microsoft.Compute/diskEncryptionSets",
        "name":"[parameters('DEDESName')]",
        "apiVersion":"[parameters('DiskEncryptionSetAPIVersion')]",          
        "location": "[resourceGroup().location]",
        "identity": { 
            "type": "SystemAssigned"
            },
        "properties":{  
            "activeKey":{
            "sourceVault": {
                "id": "[variables('keyVaultId')]"
            },
            "keyUrl": "[parameters('KeyVaultKeyUrl')]"
            },
            "encryptionType": "EncryptionAtRestWithPlatformAndCustomerKeys"
            }
        }
    ],
    "outputs": {
        "DiskEncryptionSetPrincipalId": {
            "type": "string",
            "value": "[reference(resourceId(resourceGroup().name, 'Microsoft.Compute/diskEncryptionSets', parameters('DEDESName'))).Identity.PrincipalId]"
        }
    }               
}