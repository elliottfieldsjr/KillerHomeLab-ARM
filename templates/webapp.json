{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "WebAppAPIVersion": {
            "type": "string"
        },        
        "WebAppName": {
            "type": "string"
        },
        "ServerFarmName": {
            "type": "string",
            "metadata": {
                "description": "Service Plan Name"
            }            
        },
        "alwaysOn": {
            "type": "bool",
            "metadata": {
                "description": "True, False"
            }               
        },
        "currentStack": {
            "type": "string",
            "metadata": {
                "description": "dotnet"
            }               
        },
        "phpVersion": {
            "type": "string",
            "metadata": {
                "description": "PHP Version"
            }                           
        },
        "netFrameworkVersion": {
            "type": "string",
            "metadata": {
                "description": "DOT Net Version"
            }                                       
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "[parameters('WebAppAPIVersion')]",
            "name": "[parameters('WebAppName')]",
            "type": "Microsoft.Web/sites",
            "location": "[resourceGroup().location]",
            "tags": {},
            "dependsOn": [],
            "properties": {
                "name": "[parameters('WebAppName')]",
                "siteConfig": {
                    "appSettings": [],
                    "metadata": [
                        {
                            "name": "CURRENT_STACK",
                            "value": "[parameters('currentStack')]"
                        }
                    ],
                    "phpVersion": "[parameters('phpVersion')]",
                    "netFrameworkVersion": "[parameters('netFrameworkVersion')]",
                    "alwaysOn": "[parameters('alwaysOn')]"
                },
                "serverFarmId": "[concat('/subscriptions/', subscription().id,'/resourcegroups/', resourceGroup().name, '/providers/Microsoft.Web/serverfarms/', parameters('ServerFarmName'))]",
                "clientAffinityEnabled": true,
                "virtualNetworkSubnetId": null
            }
        }
    ]
}