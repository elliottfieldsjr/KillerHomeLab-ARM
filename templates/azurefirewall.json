{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "PublicIPAddressesAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "PublicIPAddresses API Version"
            }
        },
        "FirewallAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "Firewall API Version"
            }
        },
        "FirewallName": {
            "type": "string",
            "metadata": {
                "description": "Resource Group Name"
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "Existing VNET Name that contains the domain controller"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Specifies the location in which to create the workspace."
            }
        }
    },
    "variables": {
        "publicIPAddressName1": "[concat(parameters('FirewallName'),'-pip1')]",
        "publicIPAddressName2": "[concat(parameters('FirewallName'),'-pip2')]",
        "publicIPAddressName3": "[concat(parameters('FirewallName'),'-pip3')]",
        "publicIPAddressName4": "[concat(parameters('FirewallName'),'-pip4')]",
        "publicIPAddressName5": "[concat(parameters('FirewallName'),'-pip5')]",
        "subnetId": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), 'AzureFirewallSubnet')]"
    },
    "resources": [
        {
            "name": "[variables('publicIPAddressName1')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "[parameters('PublicIPAddressesAPIVersion')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "name": "[variables('publicIPAddressName2')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "[parameters('PublicIPAddressesAPIVersion')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "name": "[variables('publicIPAddressName3')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "[parameters('PublicIPAddressesAPIVersion')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "name": "[variables('publicIPAddressName4')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "[parameters('PublicIPAddressesAPIVersion')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "name": "[variables('publicIPAddressName5')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "[parameters('PublicIPAddressesAPIVersion')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "type": "Microsoft.Network/azureFirewalls",
            "apiVersion": "[parameters('FirewallAPIVersion')]",
            "name": "[parameters('FirewallName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('publicIPAddressName1')))]",
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('publicIPAddressName2')))]",
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('publicIPAddressName3')))]",
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('publicIPAddressName4')))]",
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('publicIPAddressName5')))]"
            ],
            "properties": {
                "sku": {
                    "name": "AZFW_VNet",
                    "tier": "Standard"
                },
                "threatIntelMode": "Alert",
                "ipConfigurations": [
                    {
                        "Name": "[variables('publicIPAddressName1')]",
                        "Properties": {
                            "subnet": {
                                "id": "[variables('subnetId')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('publicIPAddressName1')))]"
                            }
                        }
                    },
                    {
                        "Name": "[variables('publicIPAddressName2')]",
                        "Properties": {
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('publicIPAddressName2')))]"
                            }
                        }
                    },
                    {
                        "Name": "[variables('publicIPAddressName3')]",
                        "Properties": {
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('publicIPAddressName3')))]"
                            }
                        }
                    },
                    {
                        "Name": "[variables('publicIPAddressName4')]",
                        "Properties": {
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('publicIPAddressName4')))]"
                            }
                        }
                    },
                    {
                        "Name": "[variables('publicIPAddressName5')]",
                        "Properties": {
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('publicIPAddressName5')))]"
                            }
                        }
                    }
                ],
                "networkRuleCollections": [],
                "applicationRuleCollections": [],
                "natRuleCollections": []
            }
        }
    ]
}