{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VMCount": {
            "type": "int"
        },
        "NetworkInterfacesAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "NetworkInterfaces API Version"
            }
        },
        "VirtualMachinesAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "VirtualMachines API Version"
            }
        },
        "computerNamePrefix": {
            "type": "string",
            "metadata": {
                "description": ""
            }
        },
        "TimeZone": {
            "type": "string",
            "metadata": {
                "description": "Time Zone"
            }
        },
        "Publisher": {
            "type": "string",
            "metadata": {
                "description": "Image Publisher"
            }
        },
        "Offer": {
            "type": "string",
            "metadata": {
                "description": "Image Publisher Offer"
            }
        },
        "OSSku": {
            "type": "string",
            "metadata": {
                "description": "OS Sku"
            }
        },
        "OSVersion": {
            "type": "string",
            "metadata": {
                "description": "OS Version"
            }
        },
        "licenseType": {
            "type": "string",
            "metadata": {
                "description": "License Type (Windows_Server or None)"
            }
        },
        "VMSize": {
            "type": "string",
            "metadata": {
                "description": "VMSize"
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "Existing VNET Name that contains the domain controller"
            }
        },
        "subnet1Name": {
            "type": "string",
            "metadata": {
                "description": "Existing subnet name that contains the domain controller"
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "The name of the Administrator of the new VM and Domain"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password for the Administrator account of the new VM and Domain"
            }
        }
    },
    "variables": {
        "storageAccountType": "Premium_LRS",
        "subnet1Id": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnet1Name'))]",
        "Nic1Name": "[concat(parameters('computerNamePrefix'),'-nic1')]"
    },
    "resources": [
        {
            "name": "[concat(copyIndex(),variables('Nic1Name'), uniqueString(resourceGroup().id))]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "[parameters('NetworkInterfacesAPIVersion')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "copy": {
                    "name": "niccopy",
                    "count": "[parameters('VMCount')]"
                },                
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subnet1Id')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[concat(copyIndex(),parameters('computerNamePrefix'), uniqueString(resourceGroup().id))]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "[parameters('VirtualMachinesAPIVersion')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces',variables('Nic1Name'), uniqueString(resourceGroup().id))]"
            ],
            "properties": {
                "copy": {
                    "name": "vmcopy",
                    "count": "[parameters('VMCount')]"
                },                 
                "licenseType": "[parameters('licenseType')]",
                "hardwareProfile": {
                    "vmSize": "[parameters('VMSize')]"
                },
                "osProfile": {
                    "computerName": "[concat(copyIndex(),parameters('computerNamePrefix'), uniqueString(resourceGroup().id))]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "WindowsConfiguration": {
                        "timeZone": "[parameters('TimeZone')]"
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[parameters('Publisher')]",
                        "offer": "[parameters('Offer')]",
                        "sku": "[parameters('OSSku')]",
                        "version": "[parameters('OSVersion')]"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('computerNamePrefix'),'_OSDisk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[variables('storageAccountType')]"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('Nic1Name'), uniqueString(resourceGroup().id))]"
                        }
                    ]
                },
                "securityProfile": {
                    "uefiSettings": {
                        "secureBootEnabled": true,
                        "vTpmEnabled": true
                    },
                "securityType": "TrustedLaunch"
                }                
            }
        }
    ]
}