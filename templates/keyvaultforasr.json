{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "KeyVaultAPIVersion": {
            "type": "string",
            "defaultValue": "2021-11-01-preview",
            "metadata": {
                "description": "KeyVault API Version"
            }
        },
        "AzureUserObjectID": {
            "type": "string",
            "metadata": {
                "description": "Azure User Object ID"
            }
        },
        "BackupObjectID": {
            "type": "string",
            "metadata": {
                "description": "Backup Object ID"
            }
        },    
        "UserManagedObjectID": {
            "type": "string",
            "metadata": {
                "description": "User Managed Object ID"
            }
        },            
        "KeyVaultNameHash": {
            "type": "string",
            "metadata": {
                "description": "Key Vault Name Hash"
            }
        }          
    },
    "variables": {
        "skuName": "standard",
        "keysPermissions": [
            "All"
        ],
        "secretsPermissions": [
            "All"
        ],
        "tenantID": "[subscription().tenantId]"
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "name": "[guid(resourceGroup().id, parameters('KeyVaultNameHash'))]",
            "apiVersion": "[parameters('KeyVaultAPIVersion')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "enabledForDeployment": true,
                "enabledForDiskEncryption": true,
                "enabledForTemplateDeployment": true,
                "enableSoftDelete": true,
                "enablePurgeProtection": true,
                "softDeleteRetentionInDays": 7,
                "tenantId": "[variables('tenantId')]",
                "accessPolicies": [
                    {
                        "objectId": "[parameters('BackupObjectID')]",
                        "tenantId": "[variables('tenantId')]",
                        "permissions": {
                            "keys": "[variables('keysPermissions')]",
                            "secrets": "[variables('secretsPermissions')]"      
                        }
                    },
                    {
                        "objectId": "[parameters('AzureUserObjectID')]",
                        "tenantId": "[variables('tenantId')]",
                        "permissions": {
                            "keys": "[variables('keysPermissions')]",
                            "secrets": "[variables('secretsPermissions')]"      
                        }
                    },
                    {
                        "objectId": "[parameters('UserManagedObjectID')]",
                        "tenantId": "[variables('tenantId')]",
                        "permissions": {
                            "keys": "[variables('keysPermissions')]",
                            "secrets": "[variables('secretsPermissions')]"      
                        }
                    }                    
                ],
                "sku": {
                    "name": "[variables('skuName')]",
                    "family": "A"
                },
                "networkAcls": {
                    "defaultAction": "Allow",
                    "bypass": "AzureServices"
                }
            }
        }
    ]
}