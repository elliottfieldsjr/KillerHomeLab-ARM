{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VirtualNetworkAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "Virtual Network API Version"
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "VNet name"
            }
        },
        "vnetprefix": {
            "type": "string",
            "metadata": {
                "description": "VNet prefix"
            }
        },
        "subnet1Name": {
            "type": "string",
            "metadata": {
                "description": "Subnet 1 Name"
            }
        },
        "subnet1Prefix": {
            "type": "string",
            "metadata": {
                "description": "Subnet 1 Prefix"
            }
        },
        "subnet2Name": {
            "type": "string",
            "metadata": {
                "description": "Subnet 2 Name"
            }
        },
        "subnet2Prefix": {
            "type": "string",
            "metadata": {
                "description": "Subnet 2 Prefix"
            }
        },
        "GatewaySubnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "Gateway Subnet Prefix"
            }
        },
        "BastionsubnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "Bastion Subnet Prefix"
            }
        },
        "FirewallsubnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "Firewall Subnet Prefix"
            }
        },
        "DNSServerIP": {
            "type": "array",
            "metadata": {
                "description": "The DNS address(es) of the DNS Server(s) used by the VNET"
            }
        },
        "NetworkSecurityGroupName": {
            "type": "string",
            "metadata": {
                "description": "Network Security Group Name"
            }
        }
    },
    "variables": {
        "NetworkSecurityGroupID": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', parameters('NetworkSecurityGroupName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('vnetName')]",
            "apiVersion": "[parameters('VirtualNetworkAPIVersion')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetprefix')]"
                    ]
                },
                "dhcpOptions": {
                    "dnsServers": "[parameters('DNSServerIP')]"
                },
                "subnets": [
                    {
                        "name": "GatewaySubnet",
                        "properties": {
                            "addressPrefix": "[parameters('GatewaysubnetPrefix')]"
                        }
                    },
                    {
                        "name": "[parameters('subnet1Name')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet1Prefix')]",
                            "networkSecurityGroup": {
                                "id": "[variables('NetworkSecurityGroupID')]"
                            }
                        }
                    },
                    {
                        "name": "[parameters('subnet2Name')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet2Prefix')]",
                            "networkSecurityGroup": {
                                "id": "[variables('NetworkSecurityGroupID')]"
                            }
                        }
                    },
                    {
                        "name": "AzureBastionSubnet",
                        "properties": {
                            "addressPrefix": "[parameters('BastionsubnetPrefix')]"
                        }
                    },
                    {
                        "name": "AzureFirewallSubnet",
                        "properties": {
                            "addressPrefix": "[parameters('FirewallsubnetPrefix')]"
                        }
                    }
                ]
            }
        }
    ]
}