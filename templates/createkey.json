{
    "$schema":"https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion":"1.0.0.0",
    "parameters":{  
        "KeyVaultKeyAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "KeyVault Key API Version"
            }
        },        
        "KeyVaultNameHash": {
            "type": "string",
            "metadata": {
                "description": "Key Vault Name Hash"
            }
        }
    },
    "variables": {
        "KeyVaultHash": "[guid(resourceGroup().id, parameters('KeyVaultNameHash'))]",
        "Identifier": "[substring(variables('KeyVaultHash'), 19, 14)]",
        "KeyVaultName": "[concat('KV-', variables('Identifier'))]"        
    },    
    "resources":[  
        {
        "type": "Microsoft.KeyVault/vaults/keys",
        "apiVersion": "[parameters('KeyVaultKeyAPIVersion')]",
        "name": "[concat(variables('KeyVaultName'), '/Key')]",
        "location": "[resourceGroup().location]",
        "properties": {
            "kty": "RSA",
            "keySize": 2048
            }
        }
    ],
    "outputs": {
        "KeyVaultKeyUrl": {
            "type": "string",
            "value": "[reference(resourceId(resourceGroup().name, 'Microsoft.KeyVault/vaults/keys', variables('KeyVaultName'), 'Key')).KeyUriWithVersion]"
        }
    }       
 }