{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "KeyVaultAPIVersion": {
            "type": "string",
            "defaultValue": "2021-11-01-preview",
            "metadata": {
                "description": "BastionHost API Version"
            }
        },
        "KeyVaultSecretAPIVersion": {
            "type": "string"
        },
        "keyVaultName": {
            "type": "string",
            "metadata": {
                "description": "Specifies the name of the key vault."
            }
        },
        "AzureUserObjectID": {
            "type": "string",
            "metadata": {
                "description": "Azure User Object ID"
            }
        },
        "SecretName": {
            "type": "string"
        },
        "SecretValue": {
            "type": "securestring"
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Region of Resources"
            }
        }
    },
    "variables": {
        "skuName": "standard",
        "secretsPermissions": [
            "Get",
            "List",
            "Set"
        ],
        "tenantID": "[subscription().tenantId]"
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "name": "[parameters('keyVaultName')]",
            "apiVersion": "[parameters('KeyVaultAPIVersion')]",
            "location": "[parameters('location')]",
            "properties": {
                "enabledForDeployment": true,
                "enabledForDiskEncryption": true,
                "enabledForTemplateDeployment": true,
                "enableSoftDelete": true,
                "enablePurgeProtection": true,
                "softDeleteRetentionInDays": 7,
                "tenantId": "[variables('tenantId')]",
                "accessPolicies": [
                    {
                        "objectId": "[parameters('AzureUserObjectID')]",
                        "tenantId": "[variables('tenantId')]",
                        "permissions": {
                            "secrets": "[variables('secretsPermissions')]"
                        }
                    }
                ],
                "sku": {
                    "name": "[variables('skuName')]",
                    "family": "A"
                },
                "networkAcls": {
                    "defaultAction": "Allow",
                    "bypass": "AzureServices"
                }
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "[parameters('KeyVaultSecretAPIVersion')]",
            "name": "[format('{0}/{1}', parameters('KeyVaultName'), parameters('SecretName'))]",
            "properties": {
                "value": "[parameters('SecretValue')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
            ]
        }
    ]
}