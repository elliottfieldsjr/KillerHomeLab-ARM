{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "AVDWorkSpaceAPIVersion": {
            "type": "string",
            "metadata": {
                "description": "AVD Workspace API Version"
            }
        },        
        "WorkSpaceName": {
            "type": "String",
            "metadata": {
                "description": "Preferred Workspace Name to display"
            }
        },  
        "ADDesktopAppGroupName": {
            "type": "string",
            "metadata": {
                "description": "Active Directory Desktop Application Group"
            }
        },
        "ADRemoteAppGroupName": {
            "type": "string",
            "metadata": {
                "description": "Active Directory Remote Application Group"
            }
        },
        "AADDesktopAppGroupName": {
            "type": "string",
            "metadata": {
                "description": "Azure Active Directory Desktop Application Group"
            }
        },
        "AADRemoteAppGroupName": {
            "type": "string",
            "metadata": {
                "description": "Azure Active Directory Remote Application Group"
            }
        }        
    },
    "variables": {
        "allApplicationGroupReferences": [
            "[resourceId(resourceGroup().name, 'Microsoft.DesktopVirtualization/applicationgroups', parameters('ADDesktopAppGroupName'))]",
            "[resourceId(resourceGroup().name, 'Microsoft.DesktopVirtualization/applicationgroups', parameters('ADRemoteAppGroupName'))]",
            "[resourceId(resourceGroup().name, 'Microsoft.DesktopVirtualization/applicationgroups', parameters('AADDesktopAppGroupName'))]",
            "[resourceId(resourceGroup().name, 'Microsoft.DesktopVirtualization/applicationgroups', parameters('AADRemoteAppGroupName'))]"            
        ]
    },    
    "resources": [
        {
            "name": "[parameters('workSpaceName')]",
            "type": "Microsoft.DesktopVirtualization/workspaces",
            "apiVersion": "[parameters('AVDWorkSpaceAPIVersion')]",
            "location": "[resourceGroup().location]",          
            "properties": {
                "applicationGroupReferences": "[variables('allapplicationGroupReferences')]"
            }
        }
    ] 
}